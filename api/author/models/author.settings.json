{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "name": "Author",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "photo": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "email": {
      "type": "email",
      "unique": true
    },
    "articles": {
      "collection": "article",
      "via": "author"
    },
    "github": {
      "type": "string",
      "maxLength": 250
    },
    "twitter": {
      "type": "string",
      "maxLength": 250
    },
    "linkedIn": {
      "type": "string",
      "maxLength": 250
    },
    "biography": {
      "type": "text",
      "required": false,
      "maxLength": 1200
    }
  }
}
