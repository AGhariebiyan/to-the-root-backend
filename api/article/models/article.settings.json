{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "original_date": {
      "type": "date",
      "required": true
    },
    "cover_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "author": {
      "via": "articles",
      "model": "user",
      "plugin": "users-permissions"
    },
    "comments": {
      "via": "article",
      "collection": "comment"
    },
    "likes": {
      "via": "article",
      "collection": "like"
    },
    "category": {
      "via": "articles",
      "model": "category"
    },
    "tags": {
      "via": "articles",
      "collection": "tag"
    }
  }
}
